{
  "$schema": "https://codesandbox.io/schemas/tasks.json",
  "setupTasks": [
    {
      "name": "Installing Dependencies",
      "command": "pnpm install"
    },
    {
      "name": "Generating Prisma client",
      "command": "pnpm prisma generate"
    },
    {
      "name": "Building Workspace",
      "command": "pnpm build"
    }
  ],
  "tasks": {
    "run": {
      "name": "Run",
      "command": "pnpm start",
      "runAtStart": true
    },
    "run-dev": {
      "name": "Run Dev",
      "command": "pnpm dev"
    }
  }
}
